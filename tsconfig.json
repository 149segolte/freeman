{
    "compilerOptions": {
        "plugins": [
            {
                "name": "tslint-language-service",
                "ignoreDefinitionFiles": true,
                "configFile": "./tslint.json",
                "suppressWhileTypeErrorsPresent": false
            }
        ],
        "alwaysStrict": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/main/*",
                "src/renderer/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ],
        "downlevelIteration": true,
        "sourceMap": true,
        "strict": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "jsx": "react",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true,
        "strictNullChecks": true,
        "target": "es2015",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ]
    },
    "include": [
        "src",
        "test"
    ],
    "exclude": [
        "node_modules"
    ]
}
